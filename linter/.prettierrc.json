{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "plugins": ["@zackad/prettier-plugin-twig"],
  "overrides": [
    {
      "files": "../templates/**/*.twig",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": false,
        "semi": false
      }
    },
    {
      "files": "../assets/controllers/**/*.js",
      "options": {
        "parser": "babel",
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": "../assets/styles/**/*.scss",
      "options": {
        "parser": "scss",
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "bracketSpacing": false
      }
    }
  ]
}
